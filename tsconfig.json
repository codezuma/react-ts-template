{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "App": ["App"],
      "main": ["main"],
      "index.css": ["index."],
      "$components/*": ["components/*"],
      "$apis/*": ["apis/*"],
      "$lib/*": ["lib/*"],
      "$hooks/*": ["hooks/*"],
      "$features/*": ["features/*"],
      "$context/*": ["context/*"],
      "$layouts/*": ["layouts/*"],
      "$interface/*": ["interface/*"],
      "$pages/*": ["pages/*"]
    },
    "baseUrl": "src",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
